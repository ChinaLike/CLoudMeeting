<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/meeting_transcribe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/img_meeting_camera_open" />

        <ImageView
            android:id="@+id/meeting_camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/meeting_transcribe"
            android:src="@drawable/img_meeting_camera" />

        <ImageView
            android:id="@+id/meeting_microphone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/meeting_camera"
            android:src="@drawable/img_meeting_microphone" />

        <ImageView
            android:id="@+id/meeting_sound"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/meeting_microphone"
            android:src="@drawable/img_meeting_sound" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/meeting_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_meeting_menu_button" />
    </RelativeLayout>

</RelativeLayout>
