<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F232E">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/local_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/self_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


    <ImageView
        android:id="@+id/meeting_transcribe"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/img_meeting_camera_open" />

    <ImageView
        android:id="@+id/meeting_camera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/meeting_transcribe"
        android:src="@drawable/img_meeting_camera" />

    <ImageView
        android:id="@+id/meeting_microphone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/meeting_camera"
        android:src="@drawable/img_meeting_microphone" />

    <ImageView
        android:id="@+id/meeting_sound"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/meeting_microphone"
        android:src="@drawable/img_meeting_sound" />


    <ImageView
        android:id="@+id/meeting_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/img_meeting_menu_button"
        android:visibility="visible" />

</RelativeLayout>
